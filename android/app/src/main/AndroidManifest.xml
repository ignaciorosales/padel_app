<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ===== Features ===== -->
    <!-- BLE: no lo marcamos como requerido para no excluir dispositivos sin BLE -->
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="false" />
    <!-- Android TV no tiene pantalla táctil; evita el filtro por requerirla -->
    <uses-feature android:name="android.hardware.touchscreen" android:required="false" />
    <!-- Leanback: si tu app es multi-plataforma, mantenlo en false -->
    <uses-feature android:name="android.software.leanback" android:required="false" />
    <!-- Micrófono opcional (para TV sin micrófono integrado) -->
    <uses-feature android:name="android.hardware.microphone" android:required="false" />

    <!-- ===== Permissions ===== -->
    <!-- Android 12+ BLE -->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <!-- Si haces advertising en 12+ -->
    <!-- <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" /> -->

    <!-- Pre-Android 12 BLE -->
    <uses-permission android:name="android.permission.BLUETOOTH" android:maxSdkVersion="30" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" android:maxSdkVersion="30" />
    <!-- Escaneo en Android 6–11 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" android:maxSdkVersion="30" />
    <!-- Si necesitas escaneo en background (Android 10/11) -->
    <!-- <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" android:maxSdkVersion="29" /> -->

    <!-- STT -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- Red para Flutter -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- ===== Application ===== -->
    <application
        android:name="${applicationName}"
        android:label="Puntazo"
        android:icon="@mipmap/ic_launcher"
        android:banner="@drawable/tv_banner" >

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode">

            <!-- Tema mientras inicializa Flutter -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <!-- Launcher para móviles/tablets (si lo quieres multi-plataforma) -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Tile de Android TV -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Requerido por Flutter -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- Package visibility para Process Text (ok) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>
</manifest>
