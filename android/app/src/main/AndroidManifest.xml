<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ===== Features ===== -->
    <!-- USB Host mode for serial communication -->
    <uses-feature android:name="android.hardware.usb.host" android:required="true" />
    <!-- Android TV no tiene pantalla táctil; evita el filtro por requerirla -->
    <uses-feature android:name="android.hardware.touchscreen" android:required="false" />
    <!-- Leanback: si tu app es multi-plataforma, mantenlo en false -->
    <uses-feature android:name="android.software.leanback" android:required="false" />

    <!-- ===== Permissions ===== -->
    <!-- Red para Flutter -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- ===== CRITICAL: Prevenir sleep/throttling 24/7 ===== -->
    <!-- WAKE_LOCK: Prevenir que la CPU se suspenda durante el partido -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- REQUEST_IGNORE_BATTERY_OPTIMIZATIONS: Evitar Doze Mode -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <!-- FOREGROUND_SERVICE: Para Foreground Service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE" />

    <!-- ===== Application ===== -->
    <application
        android:name="${applicationName}"
        android:label="Puntazo"
        android:icon="@mipmap/ic_launcher"
        android:banner="@drawable/tv_banner" >

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="sensorLandscape"
            android:keepScreenOn="true"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode">

            <!-- Tema mientras inicializa Flutter -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <!-- Launcher para móviles/tablets (si lo quieres multi-plataforma) -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Tile de Android TV -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
            
            <!-- USB device filter: detectar módulos USB-Serial -->
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>
            
            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>

        <!-- Requerido por Flutter -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
        
        <!-- ===== Foreground Service para USB Serial 24/7 ===== -->
        <service
            android:name="com.padelapp.UsbForegroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="connectedDevice" />
    </application>

    <!-- Package visibility para Process Text (ok) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>
</manifest>
